	<parameter name="CONTEXT_PATH" class="java.lang.String" isForPrompting="false">
		<defaultValueExpression><![CDATA["C:/Users/marcelo/Documents/Sistemas/master/master.com/WebContent/report/"]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT j.fantasia, n.rua_av, n.numero, n.bairro, n.cidade,
	UPPER(n.uf) AS uf, n.complemento, n.cep, u.report_logo
FROM empresa AS e
INNER JOIN juridica AS j ON(e.codigo = j.codigo)
INNER JOIN pessoa AS p ON(e.codigo = p.codigo)
INNER JOIN endereco AS n ON(n.cod_pessoa = e.codigo)
INNER JOIN unidade u ON (u.codigo = p.cod_unidade)
WHERE u.codigo = 1293]]>
	</queryString>
