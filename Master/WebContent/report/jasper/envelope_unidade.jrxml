	<parameter name="REF_UNIDADE" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT INITCAP(j.fantasia) AS nome, INITCAP(e.rua_av) AS rua_av, e.numero, INITCAP(e.bairro) AS bairro, 
	INITCAP(e.cidade ) AS cidade, UPPER(e.uf) AS uf, e.complemento, e.cep
FROM unidade AS u
	INNER JOIN endereco AS e ON(e.cod_pessoa = u.codigo)
	INNER JOIN juridica AS j ON(u.codigo = j.codigo)
	INNER JOIN pessoa AS p ON(u.codigo = p.codigo)
WHERE p.referencia = $P{REF_UNIDADE}]]>
