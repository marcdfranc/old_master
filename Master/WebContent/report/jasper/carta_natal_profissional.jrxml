	<queryString>
		<![CDATA[SELECT f.nome, e.rua_av, e.numero, e.bairro, e.cidade, UPPER(e.uf) AS uf,
	e.complemento, e.cep, i.descricao AS fone_unidade, n.rua_av AS endereco_unidade,
	n.numero AS numero_unidade, n.bairro AS bairro_unidade,
	n.complemento AS complemento_unidade, n.cep AS cep_unidade,
	n.cidade AS cidade_unidade, UPPER(n.uf) AS uf_unidade, j.cnpj,
	(SELECT o.descricao FROM informacao AS o
		WHERE o.tipo = 'email'
		AND o.cod_pessoa = s.cod_unidade) AS email_unidade,
	(SELECT r.descricao FROM informacao AS r
		WHERE r.tipo = 'site'
		AND r.cod_pessoa = s.cod_unidade) AS site_unidade
FROM profissional AS p
	INNER JOIN endereco AS e ON(e.cod_pessoa = p.codigo)
	INNER JOIN fisica AS f ON(p.codigo = f.codigo)
	INNER JOIN pessoa AS s ON(s.codigo = p.codigo)
	INNER JOIN juridica AS j ON(s.cod_unidade = j.codigo)
	INNER JOIN informacao AS i ON(i.cod_pessoa = s.cod_unidade)
	INNER JOIN endereco AS n ON(n.cod_pessoa = s.cod_unidade)
WHERE i.principal = 's']]>
	</queryString>
