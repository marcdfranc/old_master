	<queryString>
		<![CDATA[SELECT d.nome, u.rua_av, u.numero, u.bairro, u.cidade, UPPER(u.uf) AS uf, u.complemento,
	u.cep, i.descricao AS fone_unidade, e.rua_av AS endereco_unidade,
	e.numero AS numero_unidade, e.bairro AS bairro_unidade,
	e.complemento AS complemento_unidade, e.cep AS cep_unidade,
	e.cidade AS cidade_unidade, UPPER(e.uf) AS uf_unidade, j.cnpj, n.report_logo,
	(SELECT o.descricao FROM informacao AS o
		WHERE o.tipo = 'email'
		AND o.cod_pessoa = u.cod_unidade) AS email_unidade,
	(SELECT r.descricao FROM informacao AS r
		WHERE r.tipo = 'site'
		AND r.cod_pessoa = u.cod_unidade) AS site_unidade
FROM dependente AS d
INNER JOIN vw_cliente_completo AS u ON(d.cod_usuario = u.usuario)
INNER JOIN informacao AS i ON(i.cod_pessoa = u.cod_unidade)
INNER JOIN juridica AS j ON(u.cod_unidade = j.codigo)
INNER JOIN endereco AS e ON(e.cod_pessoa = u.cod_unidade)
INNER JOIN unidade n ON (n.codigo = u.cod_unidade)
WHERE (i.principal = 's')
AND n.codigo = 78
order by u.usuario]]>
	</queryString>
