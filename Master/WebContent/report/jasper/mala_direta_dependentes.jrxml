	<queryString language="SQL">
		<![CDATA[SELECT INITCAP(d.nome) AS nome, INITCAP(u.rua_av) AS rua_av, u.numero, INITCAP(u.bairro) AS bairro,
	INITCAP(u.cidade) AS cidade, UPPER(u.uf) AS uf, u.complemento, u.cep
