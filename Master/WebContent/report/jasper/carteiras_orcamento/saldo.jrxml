	<parameter name="USUARIO" class="java.lang.Integer" isForPrompting="false">
		<parameterDescription><![CDATA[cod. usuario]]></parameterDescription>
	</parameter>
	<queryString>
		<![CDATA[SELECT SUM(l.valor * POWER(1 + ((l.taxa + 2)/100), (current_date - l.vencimento)/ 30)) AS saldo
FROM parcela_orcamento AS p
INNER JOIN lancamento AS l ON(l.codigo = p.cod_lancamento)
INNER JOIN orcamento AS o ON(p.cod_orcamento = o.codigo)
WHERE l.vencimento < CURRENT_DATE
	AND l.tipo = 'c'
	AND l.status IN('a', 'n')
	AND o.cod_usuario = $P{USUARIO}
GROUP BY o.cod_usuario]]>
	</queryString>
	<field name="saldo" class="java.math.BigDecimal">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
