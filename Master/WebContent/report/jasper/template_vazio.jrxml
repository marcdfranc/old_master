<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="template_vazio" language="groovy" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<parameter name="CONTEXT_PATH" class="java.lang.String" isForPrompting="false">
		<defaultValueExpression><![CDATA["C:/Documents and Settings/marcdfranc/Meus documentos/sistemas/master/master.com/WebContent/report/"]]></defaultValueExpression>
	</parameter>
	<parameter name="COD_UNIDADE" class="java.lang.Integer"/>
	<queryString>
		<![CDATA[SELECT u.descricao AS unidade, i.descricao AS fone, report_logo, e.cidade, e.uf, u.site,
	(SELECT o.descricao FROM informacao AS o
		WHERE o.tipo = 'email'
		AND o.cod_pessoa = u.codigo) AS email_unidade,
	e.rua_av, e.numero, e.complemento, e.bairro, e.cep
FROM unidade AS u
INNER JOIN endereco as e ON(e.cod_pessoa = u.codigo)
INNER JOIN informacao AS i ON(i.cod_pessoa = u.codigo)
WHERE i.principal = 's'
AND i.cod_pessoa = $P{COD_UNIDADE}]]>
	</queryString>
	<field name="unidade" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="fone" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="report_logo" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="cidade" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="uf" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="site" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="email_unidade" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="rua_av" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="numero" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="complemento" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="bairro" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<field name="cep" class="java.lang.String">
		<fieldDescription><![CDATA[]]></fieldDescription>
	</field>
	<background>
		<band splitType="Stretch"/>
	</background>
	<pageHeader>
		<band height="44" splitType="Stretch">
			<image>
				<reportElement x="3" y="0" width="144" height="42"/>
				<imageExpression class="java.lang.String"><![CDATA[$P{CONTEXT_PATH} + $F{report_logo}]]></imageExpression>
			</image>
			<line>
				<reportElement x="0" y="35" width="555" height="1"/>
				<graphicElement>
					<pen lineWidth="0.5"/>
				</graphicElement>
			</line>
		</band>
	</pageHeader>
	<detail>
		<band height="40" splitType="Stretch">
			<textField>
				<reportElement x="3" y="0" width="269" height="20" forecolor="#FFFFFF"/>
				<textElement/>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{report_logo}]]></textFieldExpression>
			</textField>
		</band>
	</detail>
	<pageFooter>
		<band height="43" splitType="Stretch">
			<textField>
				<reportElement x="0" y="20" width="307" height="16"/>
				<textElement>
					<font fontName="Arial" size="8"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[com.marcsoftware.Util.initCap($F{cidade}) + "/" +
$F{uf} + ": " + $F{fone} +
" - Demais Localidades: (11) 3013-2230"]]></textFieldExpression>
			</textField>
			<line>
				<reportElement x="0" y="0" width="555" height="1"/>
				<graphicElement>
					<pen lineWidth="0.5"/>
				</graphicElement>
			</line>
			<textField>
				<reportElement x="390" y="5" width="165" height="15" forecolor="#3333FF"/>
				<textElement textAlignment="Right"/>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{email_unidade}]]></textFieldExpression>
			</textField>
			<textField>
				<reportElement x="390" y="20" width="165" height="16" forecolor="#3333FF"/>
				<textElement textAlignment="Right">
					<font isItalic="true" pdfFontName="Helvetica-Oblique"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{site}]]></textFieldExpression>
			</textField>
			<textField>
				<reportElement stretchType="RelativeToTallestObject" x="0" y="5" width="390" height="16"/>
				<textElement>
					<font fontName="Arial" size="8"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA["MASTER - " + com.marcsoftware.Util.initCap($F{rua_av}) +
", " + $F{numero} + " - " +
(($F{complemento} == null)? " "
    : $F{complemento}) +
", " + com.marcsoftware.Util.initCap($F{bairro}) +
" - " + com.marcsoftware.Util.initCap($F{cidade}) +
"/" + $F{uf}.toUpperCase(  ) + "  "  +
com.marcsoftware.Util.mountCep($F{cep})]]></textFieldExpression>
			</textField>
		</band>
	</pageFooter>
</jasperReport>
