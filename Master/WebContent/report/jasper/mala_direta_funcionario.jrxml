<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="mala_direta_funcionario" language="groovy" columnCount="2" pageWidth="598" pageHeight="793" columnWidth="288" columnSpacing="14" leftMargin="4" rightMargin="4" topMargin="36" bottomMargin="20">
	<queryString language="SQL">
		<![CDATA[SELECT INITCAP(f.nome) AS nome, INITCAP(e.rua_av) AS rua_av, e.numero, INITCAP(e.bairro) AS bairro, 
	INITCAP(e.cidade ) AS cidade, UPPER(e.uf) AS uf, e.complemento, e.cep
FROM funcionario AS u
	INNER JOIN endereco AS e ON(e.cod_pessoa = u.codigo)
	INNER JOIN fisica AS f ON(u.codigo = f.codigo)
	LEFT JOIN contrato_empresa AS c ON(c.cod_usuario = u.codigo)]]>
	</queryString>
