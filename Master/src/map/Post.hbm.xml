<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.marcsoftware.database">

	<class name="Post">
		<id name="codigo">
			<generator class="native">
  				<param name="sequence">sq_post</param>
  			</generator>
		</id>
		
		<property name="tipo"/>
		<property name="assunto"/>
		<property name="texto"/>
		
		<many-to-one name="pessoa" class="Pessoa" not-null="true"/> 		
	</class>
</hibernate-mapping>