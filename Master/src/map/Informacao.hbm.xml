<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.marcsoftware.database">
 <class name="Informacao">
  <id name="codigo">
   <generator class="native">
    <param name="sequence">sq_informacao</param>
   </generator>
  </id>
  <property generated="never" lazy="false" name="tipo" not-null="true"/>
  <property generated="never" lazy="false" name="descricao" not-null="true"/>
  <property generated="never" lazy="false" name="principal"/>
  <many-to-one class="Pessoa" column="cod_pessoa" name="pessoa" not-null="true"/>
 </class>
 <query name="informacaoOf">from Informacao as i where i.pessoa = :pessoa</query>
 <query name="infoPrincipalByCode">select i.descricao from Informacao as i where i.pessoa.codigo = :codigo and i.principal = 's'</query>
 <query name="informacaoPrincipal">from Informacao as i where i.pessoa = :pessoa and i.principal = 's'</query>
</hibernate-mapping>
